{
  "name": "capro-web",
  "Private": true,
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#app/*": "./app/*"
  },
  "scripts": {
    "predev": "npm run build:icons --silent && npm run build:contents",
    "dev": "concurrently \"npm run dev:watch\" \"npm run dev:app\"",
    "dev:watch": "tsx ./scripts/build-contents/watch-contents-change.ts",
    "dev:app": "cross-env NODE_ENV=development react-router dev",
    "build": "run-s build:*",
    "build:icons": "tsx ./scripts/build-icons.ts",
    "build:contents": "rimraf ./prebuild && tsx ./scripts/build-contents/index.ts",
    "build:react-router": "cross-env NODE_OPTIONS=\"-C workerd\" NODE_ENV=production react-router build",
    "postbuild": "tsx -C workerd ./scripts/build-sitemap.ts",
    "start": "wrangler dev",
    "types": "react-router typegen && wrangler types",
    "format": "prettier '**/*.{js,jsx,ts,tsx,json,css,yaml,yml}' --write",
    "lint": "eslint .",
    "tsc": "npm run types && tsc --noEmit",
    "prepare": "husky",
    "check-bundle-size": "wrangler deploy server.ts --dry-run",
    "storybook": "storybook dev -p 6006 --no-open"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,css,json,yaml}": "prettier --write"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@nasa-gcn/remix-seo": "^2.0.1",
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@react-router/cloudflare": "^7.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "framer-motion": "^11.17.0",
    "front-matter": "^4.0.2",
    "isbot": "^5.1.21",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.1",
    "spin-delay": "^2.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@epic-web/config": "^1.16.5",
    "@eslint/compat": "^1.2.5",
    "@eslint/markdown": "^6.2.1",
    "@react-router/dev": "^7.1.1",
    "@react-router/fs-routes": "^7.1.1",
    "@sly-cli/sly": "^1.14.0",
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-docs": "^8.4.7",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/addon-storysource": "^8.4.7",
    "@storybook/addon-themes": "^8.5.0",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.4.7",
    "@tailwindcss/typography": "^0.5.16",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/hast": "^3.0.4",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "chokidar": "^4.0.3",
    "close-with-grace": "^2.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.2",
    "escape-goat": "^4.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.1",
    "hast-util-to-string": "^3.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "node-html-parser": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "parse-numeric-range": "^1.3.0",
    "prettier": "^3.4.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-custom-header-id": "^1.0.0",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.0.1",
    "shiki": "^1.27.0",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.0.7",
